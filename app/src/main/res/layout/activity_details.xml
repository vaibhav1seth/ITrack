<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/user_card"/>
        
        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@+id/toolbar"
            android:drawableLeft="@drawable/ic_name"
            android:layout_marginTop="215dp"
            android:id="@+id/name"
            android:textSize="19sp"
            android:text="    Name : Vaibhav Seth"

            android:layout_centerHorizontal="true"/>

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:id="@+id/mno"
            android:textSize="19sp"
            android:text="    Mobile no. : 123456789"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_centerHorizontal="true"
            />

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/mno"
            android:layout_marginTop="10dp"
            android:id="@+id/dob"
            android:textSize="19sp"
            android:text="    DOB : 01/01/1986"
            android:drawableLeft="@drawable/ic_dob"
            android:layout_centerHorizontal="true"
            />
        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/dob"
            android:layout_marginTop="10dp"
            android:id="@+id/account"
            android:textSize="19sp"
            android:text="    Account no. : 12345678945445"
            android:drawableLeft="@drawable/ic_account"
            android:layout_centerHorizontal="true"
            />

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/account"
            android:layout_marginTop="10dp"
            android:id="@+id/pan"
            android:textSize="19sp"
            android:text="    PAN no. : GVOPS123QE"
            android:drawableLeft="@drawable/ic_pan"
            android:layout_centerHorizontal="true"
            />

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/pan"
            android:layout_marginTop="10dp"
            android:id="@+id/aadhar"
            android:textSize="19sp"
            android:text="    Aadhar no. : 34372473473"
            android:drawableLeft="@drawable/ic_aadhar"
            android:layout_centerHorizontal="true"
            />
        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_below="@id/aadhar"
            android:layout_marginTop="10dp"
            android:id="@+id/loc"
            android:textSize="19sp"
            android:text="    Location : Aryabhatta Block, MSRIT"
            android:drawableLeft="@drawable/ic_location"
            android:layout_centerHorizontal="true"
            />
        
    </RelativeLayout>

</ScrollView>